              {% if block.settings.image != blank %}
                <picture>
                  <source
                    srcset="
                      {{ block.settings.image | image_url: width: 165, format: 'webp' }} 165w,
                      {{ block.settings.image | image_url: width: 360, format: 'webp' }} 360w,
                      {{ block.settings.image | image_url: width: 533, format: 'webp' }} 533w,
                      {{ block.settings.image | image_url: width: 720, format: 'webp' }} 720w,
                      {{ block.settings.image | image_url: width: 940, format: 'webp' }} 940w,
                      {{ block.settings.image | image_url: width: 1066, format: 'webp' }} 1066w,
                      {{ block.settings.image | image_url: format: 'webp' }}
