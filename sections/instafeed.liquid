{% if hide_nav or hide_nav_mobile %}
  <style>
    {% if hide_nav_mobile %}
      .instafeed-slider-{{ section.id }} .instafeed-btn-prev-{{ section.id }},
      .instafeed-slider-{{ section.id }} .instafeed-btn-next-{{ section.id }} {
        display: none !important;
      }
    {% endif %}
  
    @media(min-width: 750px) {
      {% if hide_nav %}
        .instafeed-slider-{{ section.id }} .instafeed-btn-prev-{{ section.id }},
        .instafeed-slider-{{ section.id }} .instafeed-btn-next-{{ section.id }} {
          display: none !important;
        }
      {% else %}
        .instafeed-slider-{{ section.id }} .instafeed-btn-prev-{{ section.id }},
        .instafeed-slider-{{ section.id }} .instafeed-btn-next-{{ section.id }} {
          display: flex !important;
        }
      {% endif %}
    }
  </style>
