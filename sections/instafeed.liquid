-%}

{%- style -%}

  {{  heading_font | font_face: font_display: 'swap' }}
  {{  subheading_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .instafeed-heading-{{ section.id }} {
    margin: 0;
    font-size: {{ heading_size | times: 0.85 }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
    text-align: {{ heading_align }};
  }

  .instafeed-subheading-{{ section.id }} {
    margin: 0;
    margin-top: {{ subheading_mt | times: 0.75 | round: 0  }}px;
  }

  .instafeed-subheading-{{ section.id }} h1
  .instafeed-subheading-{{ section.id }} h2,
  .instafeed-subheading-{{ section.id }} h3,
  .instafeed-subheading-{{ section.id }} h4,
  .instafeed-subheading-{{ section.id }} h5,
  .instafeed-subheading-{{ section.id }} h6,
  .instafeed-subheading-{{ section.id }} p,
  .instafeed-subheading-{{ section.id }} span,
  .instafeed-subheading-{{ section.id }} li,
  .instafeed-subheading-{{ section.id }} strong,
  .instafeed-subheading-{{ section.id }} a {
    margin: 0;
    font-size: {{ subheading_size | times: 0.85 }}px;
    color: {{ subheading_color }};
    line-height: {{ subheading_height }}%;
    text-transform: unset;
    text-align: {{ subheading_align }};
  }

  .instafeed-slider-{{ section.id }} {
    margin-top: {{ slider_mt | times: 0.75 | round: 0  }}px;
  }

  .instafeed-slide-{{ section.id }} {
    display: block !important;
    aspect-ratio: 1 / 1;
    border-radius: {{ image_radius }}px;
  }

  .instafeed-slide-{{ section.id }} img,
  .instafeed-slide-{{ section.id }} svg {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    border-radius: {{ image_radius }}px;
  }

  .instafeed-btn-next-{{ section.id }},
  .instafeed-btn-prev-{{ section.id }} {
    top: 50% !important;
    display: flex !important;
    border-radius: 50%;
    border: 1px solid {{ nav_border }} !important;
    width: {{ nav_size_mobile }}px !important;
    height: {{ nav_size_mobile }}px !important;
    background: {{ nav_btn_bg }} !important;
    transition: all 0.3s ease 0s;
  }

  .instafeed-btn-prev-{{ section.id }} {
    left: 5px !important;
  }
  .instafeed-btn-next-{{ section.id }} {
    right: 5px !important;
  }

  .instafeed-btn-next-{{ section.id }}::after,
  .instafeed-btn-prev-{{ section.id }}::after {
    font-size: {{ nav_size_mobile | times: 0.5 | round: 0 }}px !important;
    color: {{ nav_icon }};
  }

  .instafeed-btn-next-{{ section.id }}::after {
    margin-left: 2px;
  }
  
  .instafeed-btn-prev-{{ section.id }}::after {
    margin-left: -1px;
  }

  .instafeed-btn-next-{{ section.id }}:hover,
  .instafeed-btn-prev-{{ section.id }}:hover {
    border: 1px solid {{ nav_border_hover }} !important;
    background: {{ nav_btn_hover_bg }} !important;
  }

  .instafeed-btn-next-{{ section.id }}:hover::after,
  .instafeed-btn-prev-{{ section.id }}:hover::after {
    color: {{ nav_hover_icon }} !important;
  }
  
  @media(min-width: 768px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .instafeed-heading-{{ section.id }} {
       font-size: {{ heading_size }}px;
    }

    .instafeed-subheading-{{ section.id }} {
       margin-top: {{ subheading_mt }}px;
    }

  .instafeed-subheading-{{ section.id }} h1
  .instafeed-subheading-{{ section.id }} h2,
  .instafeed-subheading-{{ section.id }} h3,
  .instafeed-subheading-{{ section.id }} h4,
  .instafeed-subheading-{{ section.id }} h5,
  .instafeed-subheading-{{ section.id }} h6,
  .instafeed-subheading-{{ section.id }} p,
  .instafeed-subheading-{{ section.id }} span,
  .instafeed-subheading-{{ section.id }} li,
  .instafeed-subheading-{{ section.id }} strong {
      font-size: {{ subheading_size }}px;
    }

    .instafeed-slider-{{ section.id }} {
      margin-top: {{ slider_mt }}px;
    }

    .instafeed-btn-next-{{ section.id }},
    .instafeed-btn-prev-{{ section.id }} {
      width: {{ nav_size }}px !important;
      height: {{ nav_size }}px !important;
    }

    .instafeed-btn-next-{{ section.id }}::after,
    .instafeed-btn-prev-{{ section.id }}::after {
      font-size: {{ nav_size | times: 0.5 | round: 0 }}px !important;
    }
    
  }
  
{%- endstyle -%}

