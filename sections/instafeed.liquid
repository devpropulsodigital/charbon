{% comment %} PREVIEW {% endcomment %}
<style>
  .instafeed-slider-{{ section.id }}.presets-{{ section.id }} .swiper-wrapper {
    overflow-y: auto;
    justify-content: space-between;
    gap: {{ slider_gap_mobile }}px;
    scrollbar-width: none;
  }

  .instafeed-slider-{{ section.id }}.presets-{{ section.id }} .swiper-wrapper::-webkit-scrollbar {
    width: 0px;
    height: 0px;
  }
  
  .instafeed-slider-{{ section.id }}.presets-{{ section.id }} .instafeed-slide-{{ section.id }} {
    flex: 0 1 16.5%;
  }

  @media(min-width: 750px) {
    .instafeed-slider-{{ section.id }}.presets-{{ section.id }} .swiper-wrapper {
      gap: {{ slider_gap }}px;
    }

    .instafeed-slider-{{ section.id }}.presets-{{ section.id }} .instafeed-slide-{{ section.id }} {
      flex: 0 1 16.5%;
    }
  }

.instafeed-btn-prev-{{ section.id }}[aria-disabled="true"]::after,
.instafeed-btn-next-{{ section.id }}[aria-disabled="true"]::after {
  content: ''; /* Crée un élément vide */
  position: absolute; /* Permet de placer l'élément par-dessus */
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: transparent; /* Couche invisible */
  pointer-events: all; /* Active la capture des événements de clic */
}

</style>

<div class="section-{{ section.id }} instafeed-{{ section.id }} content-for-grouping {% if section.settings.mobile-hidden %} mobile-hidden {% endif %} {% if section.settings.tablet-hidden %} tablet-hidden {% endif %} {% if section.settings.laptop-hidden %} laptop-hidden {% endif %} {% if section.settings.desktop-hidden %} desktop-hidden {% endif %}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
   {% if section.settings.display_id %}
    <copy-button class='section-id-btn button' data-content="#shopify-section-{{ section.id }}" data-success="false">
      <span class="copy-text">Cliquez pour copier l'ID de la section</span>
      <span class="copy-success">ID de la section copié !</span>
    </copy-button>
  {% endif %}
    <div class="section-{{ section.id }}-settings {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
