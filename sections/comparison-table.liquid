{% schema %}
{
  "name": "Tableau de comparaison",
  "settings": [
    {
      "type": "header",
      "content": "ID de la section"
    },
    {
      "type": "checkbox",
      "id": "display_id",
      "label": "Afficher le bouton pour copier l'ID de la section",
      "info": "L'ID peut être utilisé dans la section 'Double section' pour afficher 2 sections sur la même ligne ou dans la section 'Onglets' pour afficher la section dans des onglets. L'ID peut également être utilisé dans un lien de bouton pour faire défiler la page jusqu'à cette section.",
      "default": false
    },
    {
      "type": "header",
      "content": "Masquer la section selon le type d'appareil"
    },
    {
      "type": "checkbox",
      "id": "mobile-hidden",
      "label": "Masquer sur mobile",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "tablet-hidden",
      "label": "Masquer sur tablette",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "laptop-hidden",
      "label": "Masquer sur ordinateur portable",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "desktop-hidden",
      "label": "Masquer sur ordinateur",
      "default": false
    },
    {
      "type": "header",
      "content": "Titre"
    },
    {
      "type": "inline_richtext",
      "id": "headline_text",
      "label": "Texte du titre",
      "default": "Leader du sportswear premium"
    },
    {
      "type": "checkbox",
      "id": "font_headline_custom",
      "label": "Appliquer une police différente du thème",
      "default": false
    },
    {
      "type": "font_picker",
      "id": "headline_font_picker",
      "label": "Police du titre",
      "default": "poppins_i9"
    },
    {
      "type": "range",
      "label": "Taille de la police du titre",
      "id": "headline_font_size",
      "min": 20,
      "max": 100,
      "step": 1,
      "default": 48
    },
    {
      "type": "range",
      "label": "Taille de la police du titre sur mobile",
      "id": "headline_font_size_mobile",
      "min": 20,
      "max": 70,
      "step": 1,
      "default": 36
    },
    {
      "type": "color",
      "label": "Couleur du texte du titre",
      "id": "headline_text_color",
      "default": "#2E2A39"
    },
    {
      "type": "range",
      "label": "Interligne du titre",
      "id": "headline_line_height",
