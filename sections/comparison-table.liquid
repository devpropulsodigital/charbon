{% style %}

  {{ section.settings.headline_font_picker | font_face: font_display: 'swap' }} 
  {{ section.settings.description_font_picker | font_face: font_display: 'swap' }} 
  {{ section.settings.comparison_text_font_picker | font_face: font_display: 'swap' }} 
  {{ section.settings.first_child_font_picker | font_face: font_display: 'swap' }} 

  
  #widget-section-{{ section.id }}.comparison-table-section {
    position: relative;
    width: 100%;
    z-index: 1;
    overflow: hidden;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}rem;
    background-color: {{  section.settings.section_background_color }};
    border-radius: {{  section.settings.section_border_radius }}px;
    margin-top: {{ section.settings.comparison_table_margin_top }}px;
    margin-bottom: {{ section.settings.comparison_table_margin_bottom }}px;
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
  }
  @media only screen and (max-width: 768px) {
  #widget-section-{{ section.id }}.comparison-table-section {
    margin-top: {{ section.settings.comparison_table_margin_top_mobile }}px;
    margin-bottom: {{ section.settings.comparison_table_margin_bottom_mobile }}px;
    padding-top: {{ section.settings.section_padding_top_mobile }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_mobile }}px;
  }
  }
}
  .page-width {
    margin: 0 auto;
    max-width: 1500px;
  }
  #widget-section-{{ section.id }} .compare-box {
    display: flex;
    align-items: center;
    flex-direction: {{  section.settings.single_column }};
    padding: 20px 0 40px;
    line-height: 20px;
    min-height: {{ section.settings.section_height }}px;
  }

  .left-side,
  .right-side {
    flex: 1;
    display: flex;
  }
  .left-side{
    align-items: center;
  }
  .right-side {
    flex-direction: column;
    justify-content:center;
  }
  
  /* Left Side */

  {% if section.settings.font_headline_custom %}
     #widget-section-{{ section.id }}.comparison-table-section .left-side h2.comparison-heading {
       font-family: {{ section.settings.headline_font_picker.family }}; {{ section.settings.headline_font_picker.fallback_families }};
       font-weight: {{ section.settings.headline_font_picker.weight }};
       font-style: {{ section.settings.headline_font_picker.style }};
    }
  {% endif %} 
  
  #widget-section-{{ section.id }}.comparison-table-section .left-side h2.comparison-heading {
    font-size:{{ section.settings.headline_font_size }}px;
    text-transform: initial;
    letter-spacing: 0;
    width: 100%;
    text-align: center;
    line-height: {{ section.settings.headline_line_height }}px;
    text-align: {{ section.settings.headline_alignment }};
    color: {{ section.settings.headline_text_color }};
  }

  @media only screen and (max-width: 768px) {
    #widget-section-{{ section.id }}.comparison-table-section .left-side h2.comparison-heading {
      font-size: {{ section.settings.headline_font_size_mobile }}px;
      line-height: {{ section.settings.headline_line_height_mobile }}px;
      text-align: {{ section.settings.headline_alignment_mobile }};
    }
  }

    {% if section.settings.font_description_custom %}
      #widget-section-{{ section.id }}.comparison-table-section .left-side .comparison-description {
         font-family: {{ section.settings.description_font_picker.family }}; {{ section.settings.description_font_picker.fallback_families }};
         font-weight: {{ section.settings.description_font_picker.weight }};
         font-style: {{ section.settings.description_font_picker.style }};
      }
    {% endif %} 
  
    #widget-section-{{ section.id }}.comparison-table-section .left-side .comparison-description {
      font-size: {{ section.settings.description_font_size }}px;
      text-align: {{ section.settings.description_alignment }};
      color: {{ section.settings.description_text_color }};
      margin-top: {{ section.settings.description_margin_top }}px;
      margin-bottom: {{ section.settings.description_margin_bottom }}px; 
    }

  @media only screen and (max-width: 768px) {
    #widget-section-{{ section.id }}.comparison-table-section .left-side .comparison-description {
      font-size: {{ section.settings.description_font_size_mobile }}px;
      text-align: {{ section.settings.description_alignment_mobile }};
      margin-top: {{ section.settings.description_margin_top_mobile }}px;
      margin-bottom: {{ section.settings.description_margin_bottom_mobile }}px; 
    }
  }
  
  /* Right Side */
  
  .right-side {
    padding-left: 20px;
  }
  #widget-section-{{ section.id }}.comparison-table-section .product-comparison-table {
    width: 100%;
  }

  /* Right Side > Table  */
  #widget-section-{{ section.id }}.comparison-table-section table {
    border-collapse: collapse;
    border-spacing: 0;
    margin-bottom: 0;
  }

  .top-table-content th.left-top-content {
    width: 50%;
  }
  
  /* > Table > icon container  */
  .product-comparison .image-cell {
    margin-top: 0;
  }
  #widget-section-{{ section.id }} .image-cell.table-right-content img {
    height: auto;
  }

  {% if section.settings.font_comparison_text_custom %}
    #widget-section-{{ section.id }}  .comparison-text {
       font-family: {{ section.settings.comparison_text_font_picker.family }}; {{ section.settings.comparison_text_font_picker.fallback_families }};
       font-weight: {{ section.settings.comparison_text_font_picker.weight }};
       font-style: {{ section.settings.comparison_text_font_picker.style }};
    }
  {% endif %} 
  
  #widget-section-{{ section.id }}  .comparison-text{
    color: {{ section.settings.other_store_color }}; 
    font-size: {{ section.settings.comparison_text_font_size }}px;
    margin-top: {{ section.settings.comparison_text_margin_top }}px;
    margin-bottom: {{ section.settings.comparison_text_margin_bottom }}px;
  }

  @media only screen and (max-width: 768px) {
    #widget-section-{{ section.id }} .comparison-text {
      margin-top: {{ section.settings.comparison_text_margin_top_mobile }}px;
      margin-bottom: {{ section.settings.comparison_text_margin_bottom_mobile }}px;
    }
  }

  /* 2nd Table  */
  #widget-section-{{ section.id }} .side-by-side-comparison table {
    background-color: {{ section.settings.features_background_color }} ;
    margin-bottom: 0;
    margin-top: 20px;
    border-radius: {{ section.settings.border_radius_table }}px;
    width: 100%;
    box-shadow: 
        {% if section.settings.enable_shadow %}
        {{ section.settings.shadow_offset_x }}px 
        {{ section.settings.shadow_offset_y }}px 
        {{ section.settings.shadow_blur }}px 
        {{ section.settings.shadow_spread }}px
        rgba(
          {{ section.settings.table_shadow_color | color_extract: 'red' }},
          {{ section.settings.table_shadow_color | color_extract: 'green' }},
          {{ section.settings.table_shadow_color | color_extract: 'blue' }},
          {{ section.settings.shadow_opacity }});
        {% else %}
        none;
        {% endif %};
  }

  table.product-comparison-table tbody tr th:first-child,
  .side-by-side-comparison table tbody tr td:first-child {
    width: 50%;
  }

  #widget-section-{{ section.id }} .side-by-side-comparison table tbody tr td {
    border-width: {{ section.settings.table_border_width }}px;
    border-color: {{ section.settings.table_border_color }};
    border-style: solid;
}

  {% if section.settings.font_first_child_custom %}
     #widget-section-{{ section.id }} .side-by-side-comparison table tbody tr td:first-child {
       font-family: {{ section.settings.first_child_font_picker.family }}; {{ section.settings.first_child_font_picker.fallback_families }};
       font-weight: {{ section.settings.first_child_font_picker.weight }};
       font-style: {{ section.settings.first_child_font_picker.style }};
    }
  {% endif %} 
  
  /*2nd Table > First Column */
  #widget-section-{{ section.id }} .side-by-side-comparison table tbody tr td:first-child {
    font-size: {{ section.settings.features_font_size }}px;
    line-height: 28px;
    padding: 15px 10px;
    color:  {{ section.settings.features_text_color }};
    text-align: center;
  }
  @media only screen and (max-width: 768px) {
  #widget-section-{{ section.id }} .side-by-side-comparison table tbody tr td:first-child {
    font-size: {{ section.settings.features_font_size_mobile }}px;
  }
}
  /* Second Column */
  .side-by-side-comparison table tbody tr td:nth-child(2) {
    text-align: center;
    width: 27%;
  }
  #brand-logo { 
    width: 27%;
  }
  /* Thrid Column */
  .side-by-side-comparison table tbody tr td:nth-child(3) {
    text-align: center;
    width: 23%;
  }

  .side-by-side-comparison table tbody tr td img{
    width:25px;
  }
  /* Common Class  */
  .text-center {
    text-align: center;
  }

  /* Code Organize End */
  @media only screen and (max-width: 600px) {
    #widget-section-{{ section.id }} .compare-box {
      flex-direction: column;
    }
    .right-side {
      width: 100%;
      padding: 0;
    }
    #widget-section-{{ section.id }} .image-cell.table-right-content img {
      width: 66px;
    }
    /* Right Side  */
    /* Right Side > Table  */
    #widget-section-{{ section.id }} .side-by-side-comparison table tbody tr td img{
      width:20px;
    }
  }

  #widget-section-{{ section.id }} .comparison-feature-details {
    padding-left: {{ section.settings.comparison_feature_padding_side }}px;
    padding-right: {{ section.settings.comparison_feature_padding_side }}px;
    padding-top: {{ section.settings.comparison_feature_padding_vertical }}px;
    padding-bottom: {{ section.settings.comparison_feature_padding_vertical }}px;
    width: 100%;
  }
  
  @media only screen and (max-width: 768px) {
    #widget-section-{{ section.id }} .comparison-feature-details {
      padding-left: {{ section.settings.comparison_feature_padding_side_mobile }}px;
      padding-right: {{ section.settings.comparison_feature_padding_side_mobile }}px;
      padding-top: {{ section.settings.comparison_feature_padding_vertical_mobile }}px;
      padding-bottom: {{ section.settings.comparison_feature_padding_vertical_mobile }}px;
    }
  }
  
#widget-section-{{ section.id }} .custom-svg-icon-yes {
  width: {{ section.settings.svg_size }}px;
  height: {{ section.settings.svg_size }}px;
}
@media only screen and (max-width: 768px) {
  #widget-section-{{ section.id }} .custom-svg-icon-yes {
    width: {{ section.settings.svg_size_mobile }}px; 
    height: {{ section.settings.svg_size_mobile }}px;
  }
}
#widget-section-{{ section.id }} .custom-svg-icon-no {
  width: {{ section.settings.svg_size }}px;
  height: {{ section.settings.svg_size }}px;
}
@media only screen and (max-width: 768px) {
  #widget-section-{{ section.id }} .custom-svg-icon-no {
    width: {{ section.settings.svg_size_mobile }}px; 
    height: {{ section.settings.svg_size_mobile }}px;
  }
}

    .side-by-side-comparison table tr td {
  border-left: none !important;
  border-right: none !important; 
}
  

.side-by-side-comparison table tr:first-child td:nth-child(2)::before {
  content: "";
  position: absolute;
  top: -20px; 
  left: 0;
  right: 0;
  height: 20px; 
  background-color: {{ section.settings.second_column_background_color }};
  border-top-left-radius: {{ section.settings.border_radius_brand }}px;
  border-top-right-radius: {{ section.settings.border_radius_brand }}px;
}

.side-by-side-comparison table tr:last-child td:nth-child(2)::after {
  content: "";
  position: absolute;
  bottom: -20px; 
  left: 0;
  right: 0;
  height: 20px; 
  background-color: {{ section.settings.second_column_background_color }};
  border-bottom-left-radius: {{ section.settings.border_radius_brand }}px;
  border-bottom-right-radius: {{ section.settings.border_radius_brand }}px;
}

.side-by-side-comparison table tr td:nth-child(2) {
  position: relative;
  background-color: {{ section.settings.second_column_background_color }};
  border: none !important;
}

{% endstyle %}

<section id="widget-section-{{ section.id }}" class="product-comparison comparison-table-section content-for-grouping {% if section.settings.mobile-hidden %} mobile-hidden {% endif %} {% if section.settings.tablet-hidden %} tablet-hidden {% endif %} {% if section.settings.laptop-hidden %} laptop-hidden {% endif %} {% if section.settings.desktop-hidden %} desktop-hidden {% endif %} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {% if section.settings.display_id %}
    <copy-button class='section-id-btn button' data-content="#shopify-section-{{ section.id }}" data-success="false">
      <span class="copy-text">Cliquez pour copier l'ID de la section</span>
      <span class="copy-success">ID de la section copié !</span>
    </copy-button>
  {% endif %}
  <div class="page-width">
    <div class="compare-box">
      {% if section.settings.comparison_table_only == false %}
        <div class="left-side">
          <div class="comparison-feature-details">
            <h2 class="comparison-heading">{{ section.settings.headline_text }}</h2>
            <div class="comparison-description">
              {{ section.settings.description_text }}
            </div>
          </div>
        </div>
      {% endif %}

      <div class="right-side">
        <div class="top-table-content">
          <table class="product-comparison-table">
            <tbody>
              <tr>
                <th>&nbsp;</th>
                <th id="brand-logo">
                 <div class="image-cell table-right-content">
                    {% if section.settings.own_store_logo != blank %}
                      <img 
                        src="{{ section.settings.own_store_logo | image_url: width: section.settings.own_store_logo_width }}" 
                        srcset="
                          {{ section.settings.own_store_logo | image_url: format: 'webp', width: '300' }} 300w, 
                          {{ section.settings.own_store_logo | image_url: format: 'webp', width: '600' }} 600w, 
                          {{ section.settings.own_store_logo | image_url: format: 'webp', width: '900' }} 900w, 
                          {{ section.settings.own_store_logo | image_url: format: 'webp', width: '1200' }} 1200w, 
                          {{ section.settings.own_store_logo | image_url: format: 'webp', width: '1600' }} 1600w
                        " 
                        sizes="(max-width: 600px) 600px, (max-width: 900px) 900px, (max-width: 1200px) 1200px, 100vw"
                        alt="Logo de la boutique"
                        class="store-logo"
                        style="width: 100%; max-width: {{ section.settings.own_store_logo_width }}px; height: auto;"
                      />
                    {% endif %}
                  </div>

                </th>
                <th class="text-center">
                  <p class="comparison-text">{{ section.settings.other_store_text }}</p>
                </th>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="side-by-side-comparison">
          <table>
            <tbody>
              {% for block in section.blocks %}
                <tr class="row-loop">
                  <td>{{ block.settings.text }}</td>
                  <td>
