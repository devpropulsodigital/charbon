      "label": "Largeur de l'image sur ordinateur",
      "default": "limited"
    },
    {
      "type": "range",
      "id": "image_max_width",
      "min": 300,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Largeur maximale de l'image",
      "default": 900
    },
    {
      "type": "checkbox",
      "id": "full_page_width",
      "label": "Utiliser la largeur de la page complète",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "image_corner_radius",
      "label": "Activer l'arrondi des angles de l'image",
      "default": false,
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Image mobile",
      "info": "Si cette option est vide, l'image principale sera appliquée au mobile."
    },
    {
      "type": "header",
      "content": "Boutons caractéristiques et modaux"
    },
    {
      "type": "select",
      "id": "hotspot_open_event",
      "options": [
        {
          "value": "click",
          "label": "Clic"
        },
        {
          "value": "hover",
          "label": "Survol"
        }
      ],
      "label": "Ouvrir le modal au :",
      "default": "click"
    },
    {
      "type": "color_scheme",
      "id": "hotspots_color_scheme",
      "label": "Nuancier de couleurs des boutons",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "display_hotspots_animation",
      "label": "Afficher l'animation des boutons",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "hotspot_content_color_scheme",
      "label": "Nuancier de couleurs des modaux",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "hotspot_image_size",
      "options": [
        {
          "value": "small",
          "label": "Petite"
        },
        {
          "value": "full",
          "label": "Largeur complète"
        }
