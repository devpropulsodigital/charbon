{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  
    .bullet-point {
      --bullet-size: {{ section.settings.bullet_size_desktop }}rem;
      --line-width: {{ section.settings.line_width_desktop }}rem;
    }

    .hotspots-image-container-{{ section.id }} .hotspot__content {
      left: var(--offset-x);
      max-width: {{ section.settings.hotspot_modal_desktop_width | divided_by: 10.0 }}rem;
      {% if section.settings.contain_hotspot_modal %}
        left: calc(min(max({{ section.settings.hotspot_modal_desktop_width | divided_by: 20.0 | plus: 1 }}rem, var(--offset-x)), calc(100% - {{ section.settings.hotspot_modal_desktop_width | divided_by: 20.0 | plus: 1 }}rem)));
      {% endif %}
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  
    .hotspots-image__content {
      width: {{ section.settings.content_width }}rem;
      max-width: 100%;
    }

      @media screen and (max-width: 749px) {
    .bullet-point {
      --bullet-size: {{ section.settings.bullet_size_mobile }}rem;
      --line-width: {{ section.settings.line_width_mobile }}rem;
    }

    .hotspots-image-container-{{ section.id }} .hotspot__content {
      max-width: {{ section.settings.hotspot_modal_mobile_width | divided_by: 10.0 }}rem;
      left: calc(min(max({{ section.settings.hotspot_modal_mobile_width | divided_by: 20.0 | plus: 1 }}rem, var(--offset-x)), calc(100% - {{ section.settings.hotspot_modal_mobile_width | divided_by: 20.0 | plus: 1 }}rem)));
      width: 100%;
    }
  }
{%- endstyle -%}


{% liquid
  assign content_empty = false
  if section.settings.title == blank and section.settings.text == blank and section.settings.button_label == blank and section.settings.atc_button_label == blank
    assign content_empty = true
  endif
%}

<div class="color-{{ section.settings.color_scheme }} content-for-grouping {% if section.settings.mobile-hidden %} mobile-hidden {% endif %} {% if section.settings.tablet-hidden %} tablet-hidden {% endif %} {% if section.settings.laptop-hidden %} laptop-hidden {% endif %} {% if section.settings.desktop-hidden %} desktop-hidden {% endif %}">
  {% if section.settings.display_id %}
    <copy-button class='section-id-btn button' data-content="#shopify-section-{{ section.id }}" data-success="false">
      <span class="copy-text">Cliquez pour copier l'ID de la section</span>
      <span class="copy-success">ID de la section copi√© !</span>
    </copy-button>
  {% endif %}
  <div class="section-{{ section.id }}-padding{% unless section.settings.full_page_width %} page-width{% endunless %}">
      <div class="
          hotspots-image-container
          hotspots-image-container-{{ section.id }}
          hotspots-image-container--content-{{ section.settings.desktop_content_position }}
          hotspots-image-container--mobile-content-{{ section.settings.mobile_content_position }}
          {% if section.settings.color_scheme != section.settings.content_color_scheme %} hotspots-image--different-bg{% else %} hotspots-image--same-bg{% endif %}
          {% if section.settings.desktop_image_width == 'unlimited' %}
              hotspots-image-container--maximum
          {% else %}
              hotspots-image-container--limited
          {% endif %}
          animate-item
          {% if content_empty %} hotspots-image-container--content-empty{% endif %}
      ">
      <div
        class="hotspots-image__content{% if section.settings.hide_content_on_mobile %} hotspots-image__content--hide-on-mobile{% endif %}{% if section.settings.content_corner_radius %} content--border-radius{% endif %} color-{{ section.settings.content_color_scheme }}"
      >
        <div class="content-rte hotspots-image__content-container {{ section.settings.desktop_content_alignment }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {% if section.settings.title != blank %}
            <h2 class="{{ section.settings.heading_size }}">
              {{ section.settings.title }}
            </h2>
          {% endif %}
          {% if section.settings.text != blank %}
            <div class="rte">
              {{ section.settings.text }}
            </div>
          {% endif %}
          {%- if section.settings.button_label != blank -%}
            <a
              {% if section.settings.link %}
                href="{{ section.settings.link }}"
              {% else %}
                role="link" aria-disabled="true"
              {% endif %}
              class="button {% if section.settings.button_style_secondary %}button--secondary{% else %}button--primary{% endif %}"
            >
              {{- section.settings.button_label | escape -}}
            </a>
          {%- endif -%}
        </div>
      </div>
      <div
        class="hotspots-image{% if section.settings.mobile_image != blank %} hotspots-image--has-mobile-img{% endif %} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        style="--max-width:{{ section.settings.image_max_width | divided_by: 10.0 }}rem"
      >
        {% if section.settings.image != blank %}
          <div class="hotspots-image__image{% if section.settings.image_corner_radius %} image--corner-radius{% endif %}">
            <picture>
              <source 
                srcset="
                  {{ section.settings.image | image_url: width: 360, format: 'webp' }} 360w,
                  {{ section.settings.image | image_url: width: 535, format: 'webp' }} 535w,
                  {{ section.settings.image | image_url: width: 750, format: 'webp' }} 750w,
                  {{ section.settings.image | image_url: width: 1070, format: 'webp' }} 1070w,
                  {{ section.settings.image | image_url: width: 1500, format: 'webp' }} 1500w,
                  {{ section.settings.image | image_url: width: 2000, format: 'webp' }} 2000w"
                type="image/webp"
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, 
                       (min-width: 750px) calc((100vw - 130px) / 2), 
                       calc((100vw - 50px))"
              >
              <img 
                src="{{ section.settings.image | image_url: width: 1500 }}"
                srcset="
                  {{ section.settings.image | image_url: width: 360 }} 360w,
                  {{ section.settings.image | image_url: width: 535 }} 535w,
                  {{ section.settings.image | image_url: width: 750 }} 750w,
                  {{ section.settings.image | image_url: width: 1070 }} 1070w,
                  {{ section.settings.image | image_url: width: 1500 }} 1500w,
                  {{ section.settings.image | image_url: width: 2000 }} 2000w"
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, 
                       (min-width: 750px) calc((100vw - 130px) / 2), 
                       calc((100vw - 50px))"
                alt="{{ section.settings.image.alt | escape }}"
                loading="lazy"
              >
            </picture>
          </div>
          {% if section.settings.mobile_image != blank %}
            <div class="hotspots-image__mobile-image{% if section.settings.image_corner_radius %} image--corner-radius{% endif %}">
              <picture>
                <source 
                  srcset="
                    {{ section.settings.mobile_image | image_url: width: 360, format: 'webp' }} 360w,
                    {{ section.settings.mobile_image | image_url: width: 535, format: 'webp' }} 535w,
                    {{ section.settings.mobile_image | image_url: width: 750, format: 'webp' }} 750w,
                    {{ section.settings.mobile_image | image_url: width: 1070, format: 'webp' }} 1070w,
                    {{ section.settings.mobile_image | image_url: width: 1500, format: 'webp' }} 1500w,
                    {{ section.settings.mobile_image | image_url: width: 2000, format: 'webp' }} 2000w"
                  type="image/webp"
                  sizes="(min-width: 750px) calc((100vw - 130px) / 2), 
                         calc((100vw - 50px))"
                >
                <img 
                  src="{{ section.settings.mobile_image | image_url: width: 1500 }}"
                  srcset="
                    {{ section.settings.mobile_image | image_url: width: 360 }} 360w,
                    {{ section.settings.mobile_image | image_url: width: 535 }} 535w,
                    {{ section.settings.mobile_image | image_url: width: 750 }} 750w,
                    {{ section.settings.mobile_image | image_url: width: 1070 }} 1070w,
                    {{ section.settings.mobile_image | image_url: width: 1500 }} 1500w,
                    {{ section.settings.mobile_image | image_url: width: 2000 }} 2000w"
                  sizes="(min-width: 750px) calc((100vw - 130px) / 2), 
                         calc((100vw - 50px))"
                  alt="{{ section.settings.mobile_image.alt | escape }}"
                  loading="lazy"
                >
              </picture>
            </div>
          {% endif %}
        {% else %}
          {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
        {% endif %}

        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'hotspot' %}
              <hotspot-button
                class="hotspot{% if block.settings.enable_mobile_position %} hotspot--mobile-position{% endif %}"
                data-type="feature"
                data-open-event="{{ section.settings.hotspot_open_event }}"
                data-open="false"
                data-section="{{ section.id }}"
                style="--offset-x:{{ block.settings.offset_x }}%;--offset-y:{{ block.settings.offset_y }}%;--mobile-offset-x:{{ block.settings.mobile_offset_x }}%;--mobile-offset-y:{{ block.settings.mobile_offset_y }}%;"
                {{ block.shopify_attributes }}
              >
                <button
                  class="hotspot-btn color-{{ section.settings.hotspots_color_scheme }}{% if section.settings.display_hotspots_animation %} ripple-animation{% endif %}"
                >
                  {% render 'material-icon', icon: 'add' %}
                </button>
                <div
                  class="hotspot__content color-{{ section.settings.hotspot_content_color_scheme }} {{ block.settings.alignment }}"
                >
                  <div class="hotspot__content__image-and-text">
                    {% if block.settings.image != blank %}
                      <div class="hotspot__content__image {% if section.settings.hotspot_image_size == 'small' %}hotspot__content--small-image{% endif %}">
                        {{ block.settings.image | image_url: width: 750 | image_tag: loading: 'lazy' }}
                      </div>
                    {% endif %}
                    <div class="hotspot__content__title-and_text">
                      {% if block.settings.title != blank %}
                        <h3 class="hotspot__content__title">
                          {{ block.settings.title }}
                        </h3>
                      {% endif %}
                      {% if block.settings.text != blank %}
                        <div class="hotspot__content__text rte">
                          {{ block.settings.text }}
                        </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </hotspot-button>
            {% when 'bullet_point' %}
              <div
                class="bullet-point{% if block.settings.enable_mobile_position %} bullet-point--mobile-position{% endif %} color-{{ section.settings.bullet_points_color }}"
                data-bullet-style="{{ section.settings.bullet_style }}"
                data-direction="{{ block.settings.direction }}"
                data-mobile-direction="{{ block.settings.mobile_direction }}"
                data-line-bend="{{ block.settings.line_bend }}"
                data-mobile-line-bend="{{ block.settings.mobile_line_bend }}"
                data-contain="{{ section.settings.contain_bullet_points }}"
                style="
                  --offset-x:{{ block.settings.offset_x }}%;
                  --offset-y:{{ block.settings.offset_y }}%;
                  --mobile-offset-x:{{ block.settings.mobile_offset_x }}%;
                  --mobile-offset-y:{{ block.settings.mobile_offset_y }}%;
                  --desktop-width:{{ section.settings.bullet_point_desktop_width | divided_by: 10.0 }}rem;
                  --mobile-width:{{ section.settings.bullet_point_mobile_width }}%;
                "
                {{ block.shopify_attributes }}
              >
                <div class="bullet-point__line-end">&nbsp</div>
                {% if block.settings.title != blank %}
                  <h3 class="bullet-point__title">
                    {{ block.settings.title }}
                  </h3>
                {% endif %}
                {% if block.settings.text != blank %}
                  <div class="bullet-point__text rte">
                    {{ block.settings.text }}
                  </div>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

