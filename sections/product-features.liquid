      "default": 120
    },
    {
      "type": "header",
      "content": "Image principale"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "desktop_image_width",
      "options": [
        {
          "value": "limited",
          "label": "Limité"
        },
        {
