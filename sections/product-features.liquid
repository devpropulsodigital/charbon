    {
      "type": "select",
      "id": "desktop_content_alignment",
      "label": "Alignement du contenu sur ordinateur",
      "options": [
        {
          "value": "left",
          "label": "Gauche"
        },
        {
          "value": "center",
          "label": "Centre"
        },
        {
          "value": "right",
          "label": "Droite"
        }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "hide_content_on_mobile",
      "label": "Masquer le contenu sur mobile",
      "default": false
    },
    {
      "type": "select",
      "id": "mobile_content_position",
      "label": "Position du contenu sur mobile",
      "options": [
        {
          "value": "top",
          "label": "Haut"
        },
        {
          "value": "bottom",
          "label": "Bas"
        }
      ],
      "default": "top"
    },
    {
      "type": "checkbox",
      "id": "content_corner_radius",
      "label": "Activer l'arrondi des angles du contenu",
