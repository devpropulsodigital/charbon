    },
    {
      "type": "range",
      "id": "hotspot_modal_desktop_width",
      "min": 200,
      "max": 600,
      "step": 20,
      "unit": "px",
      "label": "Largeur du modal sur ordinateur",
      "default": 340
    },
    {
      "type": "range",
      "id": "hotspot_modal_mobile_width",
      "min": 100,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Largeur du modal sur mobile",
      "default": 200
    },
    {
      "type": "header",
      "content": "Points clés"
    },
    {
      "type": "color_scheme",
      "id": "bullet_points_color",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "bullet_size_desktop",
      "label": "Taille du point",
      "min": 0,
      "max": 5,
      "step": 0.1,
      "default": 1.5
    },
    {
      "type": "range",
      "id": "bullet_size_mobile",
      "label": "Taille du point sur mobile",
      "min": 0,
      "max": 5,
      "step": 0.1,
      "default": 1.0
    },
    {
      "type": "range",
      "id": "line_width_desktop",
      "label": "Épaisseur de la ligne",
      "min": 0.1,
      "max": 2,
      "step": 0.1,
      "default": 0.3
    },
    {
      "type": "range",
      "id": "line_width_mobile",
      "label": "Épaisseur de la ligne sur mobile",
      "min": 0.1,
      "max": 2,
      "step": 0.1,
      "default": 0.2
    },
    {
      "type": "checkbox",
      "id": "contain_bullet_points",
      "label": "Contenir les points clés dans l'image",
      "default": false,
      "info": "Empêche les points clés de s'afficher en dehors de l'image sur ordinateur. Cette option est automatiquement activée pour le mobile."
    },
    {
      "type": "range",
      "id": "bullet_point_desktop_width",
      "min": 260,
      "max": 600,
      "step": 20,
      "unit": "px",
      "label": "Largeur maximale des points clés sur ordinateur",
      "default": 400
    },
    {
      "type": "range",
      "id": "bullet_point_mobile_width",
      "min": 30,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Largeur maximale des points clés sur mobile",
      "default": 60,
      "info": "Les points clés sont automatiquement optimisés pour ne pas dépasser sur mobile, peu importe la taille sélectionnée."
    },
    {
      "type": "header",
      "content": "Espacement"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Espacement en haut",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Espacement en bas",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "Bouton caractéristique",
      "settings": [
        {
          "type": "header",
          "content": "Contenu"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Caractéristique",
          "label": "Titre"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Texte",
          "default": "<p>Mettre en avant une caractéristique spécifique de votre produit.</p>"
        },
        {
          "type": "select",
          "id": "alignment",
          "options": [
            {
              "value": "left",
              "label": "Gauche"
            },
            {
              "value": "center",
              "label": "Centre"
            },
            {
              "value": "right",
              "label": "Droite"
            }
          ],
          "default": "center",
          "label": "Alignement du texte"
        },
        {
          "type": "header",
          "content": "Position"
        },
        {
          "type": "range",
          "id": "offset_x",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Décalage horizontal",
          "default": 30
        },
        {
          "type": "range",
          "id": "offset_y",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Décalage vertical",
          "default": 30
        },
        {
          "type": "header",
          "content": "Position sur mobile"
        },
        {
          "type": "checkbox",
