<script>
function initScrollingText8() {
    {% for block in section.blocks %}
    let timers{{ block.id }} = document.querySelectorAll('.countdown-timer-{{ block.id }}');
    timers{{ block.id }}.forEach(el => {
        const second = 1000,
            minute = second * 60,
            hour = minute * 60,
            day = hour * 24,
            wrapper = el;

        const dateStr = `{{ block.settings.year }}/{{ block.settings.month }}/{{ block.settings.day }} {{ block.settings.hour }}:{{ block.settings.minute }}:00`;
        const countDown = new Date(dateStr).getTime();

        // Inverser la logique pour la vitesse
        const baseVelocity = 100; // La valeur maximum du paramètre
        const scrollingVelocity = baseVelocity - {{ section.settings.scrolling_velocity }};
        const scrollingVelocityMobile = baseVelocity - {{ section.settings.scrolling_velocity_mobile }};

        const interval = setInterval(function () {
            const now = new Date().getTime();
            const distance = countDown - now;

            const days = Math.max(0, Math.floor(distance / day));
            const hours = Math.max(0, Math.floor((distance % day) / hour));
            const minutes = Math.max(0, Math.floor((distance % hour) / minute));
            const seconds = Math.max(0, Math.floor((distance % minute) / second));

            // Mise à jour des valeurs
            const daysBlock = wrapper.querySelector('.time-block:first-child');
            const hoursBlock = wrapper.querySelector('.time-block:nth-child(2)');
            const minutesBlock = wrapper.querySelector('.time-block:nth-child(3)');
            const secondsBlock = wrapper.querySelector('.time-block:nth-child(4)');

            const daysElement = daysBlock.querySelector('.js-timer-days-{{ block.id }}');
            const hoursElement = hoursBlock.querySelector('.js-timer-hours-{{ block.id }}');
            const minutesElement = minutesBlock.querySelector('.js-timer-minutes-{{ block.id }}');
            const secondsElement = secondsBlock.querySelector('.js-timer-seconds-{{ block.id }}');

            daysElement.innerText = String(days).padStart(2, '0');
            hoursElement.innerText = String(hours).padStart(2, '0');
            minutesElement.innerText = String(minutes).padStart(2, '0');
            secondsElement.innerText = String(seconds).padStart(2, '0');

            // Masquer les blocs contenant les unités et les labels lorsque leur valeur est 0
            if (days === 0) {
                daysBlock.style.display = 'none'; // Cache le bloc "jours" (numéro + label)
            }
            if (hours === 0 && days === 0) {
                hoursBlock.style.display = 'none'; // Cache le bloc "heures"
            }
           if (minutes === 0 && hours === 0 && days === 0) {
                minutesBlock.style.display = 'none'; // Cache le bloc "minutes"
            }

        }, second);

        // Gestion des interactions tactiles
        const scrollingList = wrapper.querySelector('.scrolling-scrolling-list-{{ section.id }}');
        let isPaused = false; // État de l'animation

        const resumeAnimation = () => {
            if (isPaused) {
                scrollingList.style.animationPlayState = 'running';
                isPaused = false;
            }
        };

        const pauseAnimation = () => {
            if (!isPaused) {
                scrollingList.style.animationPlayState = 'paused';
                isPaused = true;
            }
        };

        // Pauser l'animation au touchstart ou au clic
        wrapper.addEventListener('touchstart', (e) => {
            e.preventDefault(); // Empêche tout comportement par défaut bloquant
            pauseAnimation();
        });

        wrapper.addEventListener('click', (e) => {
            e.preventDefault(); // Empêche tout comportement par défaut bloquant
            pauseAnimation();
        });

        // Reprendre l'animation au touchend
        wrapper.addEventListener('touchend', (e) => {
            e.preventDefault(); // Empêche tout comportement par défaut bloquant
            resumeAnimation();
        });

        // Reprendre l'animation sur tout mouvement tactile (même sur la barre)
        wrapper.addEventListener('touchmove', (e) => {
            e.preventDefault(); // Empêche tout comportement par défaut bloquant
            resumeAnimation();
        });

        document.addEventListener('shopify:section:unload', function (event) {
            if (event.detail.sectionId === '{{ section.id }}') clearInterval(interval);
        });
    });
    {% endfor %}
}


  document.addEventListener('DOMContentLoaded', initScrollingText8);
  
  if (Shopify.designMode) {
     document.addEventListener('shopify:section:unload', initScrollingText8);
     document.addEventListener('shopify:section:load', initScrollingText8);
  }
</script>

